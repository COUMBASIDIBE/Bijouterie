{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }}Connexion
{% endblock %}
{% block titre %}
    Connexion
{% endblock %}



{% block body %}

        {% for message in app.flashes('success')  %}
            <div class="row mt-4">
                <div class="alert alert-success col-md-6 text-center">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="{{ path('login') }}" method="post">


                <div class="form-group">
                    <label for="exampleInputEmail1" class="form-label mt-4">E-mail</label>
                    <input type="email" class="form-control"  name="_username" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Veulliez entrer votre email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="form-label mt-4">Mot de passe</label>
                    <input type="password" class="form-control" name="_password" id="exampleInputPassword1" placeholder="Veuillez entrer votre mot de passe">
                    <a href="{{ path('registration') }}">Pas encore inscrit?, cliquez ici</a>
                </div>
                <button type="submit" class="btn btn-outline-primary">Se connecter</button>

            </form>



        </div>



    </div>









{% endblock %}
