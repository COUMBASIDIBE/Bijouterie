{% extends 'backoffice.html.twig' %}

{% block title %}
    {{ parent() }}Modif_article
{% endblock %}

{% block titre %}
    Modifcation Article
{% endblock %}



{% block body %}
    <div class="container">
        {% for message in app.flashes('success')  %}
        <div class="row mt-4">
            <div class="alert alert-success col-md-6 text-center">
                {{ message }}
            </div>
                </div>

        {% endfor %}
        <div class="row justify-content-center mb-5">

            <div class="col-md-6">
                {{ form_start(formu) }}
                <div class="mt-2">
                    <label for="">Nom</label>
                    {{ form_row(formu.nom) }}
                </div>
                <div class="mt-2">
                    <label for="">Prix</label>
                    {{ form_row(formu.prix) }}
                </div>
                <div class="mt-2">
                    <label for="">Référence</label>
                    {{ form_row(formu.ref) }}
                </div>
                <div class="mt-2">
                    <label for="">Description</label>
                    {{ form_row(formu.description) }}
                </div>
                <div class="mt-2" >
                    <label for="">Catégorie</label>
                    {{ form_row(formu.categorie) }}
                </div>
                <div class="mt-2">
                    <label for="">Photo</label>
                    {{ form_row(formu.photoModif, {"attr": {"onChange": "loadFile(event)"}}) }}
                </div>

                <div  class="row justify-content-around mt3">

                    <div class="col-md-6">
                        <label for="">Photo actuelle</label>
                        <img width="300" height="300" src="{{ asset('photos/') }}{{ article.photo }}" alt="">
                    </div>
                <div class="col-md-6 text-center">
                    <label for="">Nouvelle photo</label>
                    <img width="300" height="300"  id="image" style='width:300px'>
                </div>

                </div>

                <div class="mt-4">
                    {{ form_row(formu.Valider) }}
                </div>
                {{ form_end(formu) }}
            </div>
        </div>
    </div>


    <script>

        var loadFile = function(event){
            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>

{% endblock %}


